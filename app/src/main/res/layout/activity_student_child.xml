<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.StudentChildActivity">

    <RelativeLayout
        android:layout_width="match_parent"


        android:layout_height="40dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="10dp"

            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评价某某某"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_centerInParent="true"
            />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:text="评分标准：热爱劳动，主动积极参加体力劳动，在劳动和清洁卫生中起带头作用，
不怕脏、不怕累，出色完成劳动任务。热爱集体，积极参加集体活动，如主题班会、班活动等；积极策划组织并起带头作用，为集体荣誉，正确处理个人同集体的关系，不计较个人得失、出满勤。"
            android:layout_height="wrap_content">


        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="评价分："
                android:textSize="20sp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_jiben"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:inputType="number"
                android:layout_height="wrap_content" />



        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="品德分："

                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_pinde"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:inputType="number"

                android:layout_height="wrap_content" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="奖励分："

                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_jiangli"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:inputType="number"

                android:layout_height="wrap_content" />



        </LinearLayout>



        <TextView
            android:id="@+id/tv_save"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_shape_red"

            android:gravity="center"
            android:text="确认提交"
            android:textColor="#ffffff" />






    </LinearLayout>



</LinearLayout>