<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.InfoAddActivity">

    <RelativeLayout
        android:layout_width="match_parent"


        android:layout_height="40dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="10dp"

            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/tv_show_fragment_name_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="材料补充"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="学号："

                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_xuehao"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:text="2016014014"
                android:layout_height="wrap_content" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="姓名："

                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:text="张三"
                android:layout_height="wrap_content" />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="文体材料补充："
                android:layout_height="wrap_content" />


            <ImageView
                android:id="@+id/iv_cailiao1"
                android:layout_width="match_parent"
                android:src="@mipmap/addpic"
                android:layout_height="160dp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"

            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="能力材料补充："
                android:layout_height="wrap_content" />


            <ImageView
                android:id="@+id/iv_cailiao2"
                android:layout_width="match_parent"
                android:src="@mipmap/addpic"
                android:layout_height="160dp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="品德材料补充："
                android:layout_height="wrap_content" />


            <ImageView
                android:id="@+id/iv_cailiao3"

                android:layout_width="match_parent"
                android:src="@mipmap/addpic"
                android:layout_height="160dp" />


        </LinearLayout>



        <TextView
            android:id="@+id/tv_change"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_shape_red"

            android:gravity="center"
            android:text="上传材料"
            android:textColor="#ffffff" />






    </LinearLayout>


</LinearLayout>