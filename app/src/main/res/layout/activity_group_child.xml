<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.GroupChildActivity">


    <RelativeLayout
        android:layout_width="match_parent"


        android:layout_height="40dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="10dp"

            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评价某某某"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_centerInParent="true"
            />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="加权成绩："

                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_fenshu"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="96分"

                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="文体表现："

                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_jiben"

                android:layout_width="0dp"
                android:layout_weight="3"
                android:inputType="number"

                android:layout_height="wrap_content" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="品德表现："
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_nengli"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:inputType="number"
                android:layout_height="wrap_content" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="奖励分："

                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_jiangli"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:inputType="number"
                android:layout_height="wrap_content" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="材料查看："

                android:layout_height="wrap_content" />




        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="文体材料"
                    android:gravity="center"
                    android:layout_height="wrap_content" />


                <ImageView
                    android:id="@+id/iv_cailiao1"
                    android:layout_width="match_parent"
                    android:src="@mipmap/none"
                    android:layout_height="160dp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"

                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="能力材料"
                    android:gravity="center"
                    android:layout_height="wrap_content" />


                <ImageView
                    android:id="@+id/iv_cailiao2"
                    android:layout_width="match_parent"
                    android:src="@mipmap/none"
                    android:layout_height="160dp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"

                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="品德材料"
                    android:gravity="center"
                    android:layout_height="wrap_content" />


                <ImageView
                    android:id="@+id/iv_cailiao3"

                    android:layout_width="match_parent"
                    android:src="@mipmap/none"
                    android:layout_height="160dp" />


            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_chang_pwd"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:layout_height="55dp">

                <TextView
                    android:id="@+id/tv_wenti"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@null"

                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="文体材料"
                    android:textColor="#ff646464"
                    android:textSize="30px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="11dp"
                    android:src="@mipmap/next_arrow" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="#F1F1F1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="1dp">




            </View>

            <LinearLayout
                android:id="@+id/ll_go_out"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:layout_height="55dp">

                <TextView
                    android:id="@+id/tv_nengli"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@null"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="能力材料"
                    android:textColor="#ff646464"
                    android:textSize="30px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="11dp"
                    android:src="@mipmap/next_arrow" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="#F1F1F1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="1dp">




            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:layout_height="55dp">

                <TextView
                    android:id="@+id/tv_pinde"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@null"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="品德材料"
                    android:textColor="#ff646464"
                    android:textSize="30px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="11dp"
                    android:src="@mipmap/next_arrow" />
            </LinearLayout>



        </LinearLayout>




        <TextView
            android:id="@+id/tv_save"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_shape_red"
            android:gravity="center"
            android:text="确认提交"
            android:textColor="#ffffff" />






    </LinearLayout>

</LinearLayout>